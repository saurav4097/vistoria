/* Input Group */
.input-group {
    position: relative;
    margin-bottom: 30px;
}

.input-group input {
    width: 100%;
    padding: 12px;
    background: transparent;
    border: none;
    border-bottom: 2px solid #0a7eca;
    color: #020101;
    font-size: 16px;
    outline: none;
    transition: all 0.3s;
}

.input-group label {
    position: absolute;
    top: 12px;
    left: 0;
    color: #aaa;
    transition: all 0.3s;
    pointer-events: none;
}

.input-group input:focus ~ label,
.input-group input:not(:placeholder-shown) ~ label {
    top: -10px;
    font-size: 12px;
    color: #357ede;
}

/* Button */
.btn {
    background: #4384ec;
    color: #000;
    padding: 12px;
    width: 100%;
    border: none;
    border-radius: 25px;
    font-size: 16px;
    cursor: pointer;
    transition: background 0.3s;
}

.btn:hover {
    background: #477ee6;
}

